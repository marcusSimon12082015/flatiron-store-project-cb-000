<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<% @items.each do |item| %>
  <p>
  <% @itemPrice = item.price / 100 %>
  <%= item.title %> | <%= number_to_currency(@itemPrice) %> |
  <%= button_to 'Add to Cart', line_items_path(item_id: item) %>
</p>
<% end %>
